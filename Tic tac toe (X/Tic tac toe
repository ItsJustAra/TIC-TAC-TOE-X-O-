#include <stdio.h>
#include <string.h>

//Name's data type



typedef struct 
 {
 	char name[30] ;
 	
 }PlayersInfos;

 void  ShowMeTheBoard(int *board , PlayersInfos  player01, PlayersInfos  player02 )
 {
 	char Gboard[3][3];
 	
 	//Reset the board to an empety space
 	
 	for(int i = 0 ; i < 3 ;++i)
 	{
 		for(int j = 0 ; j < 3;++j)
 		
 		Gboard[i][j] =	' ' ;
 	}
 	
 	int X = 0 , O = 1;
 	
 	
 	//Printing all
 	
 	while( X < 9)
 	{
 		if( board[X] == 1 )
 		{
 			
 			
 			Gboard[0][0] = 'X';

 			
 			printf("\n");
 		}
 		
 		else if( board[O] == 1)
 		{
 			Gboard[0][0] = 'O';
 			
 			
 		}
 		
 		 if( board[X] == 2 )
 		{
 			Gboard[0][1] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 2)
 		{
 			Gboard[0][1] = 'O';
 			
 			
 		}
 		
 		if( board[X] == 3 )
 		{
 			Gboard[0][2] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 3)
 		{
 			Gboard[0][2] = 'O';
 			
 			
 		}
 		
 		
 		if( board[X] == 4 )
 		{
 			Gboard[1][0] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 4)
 		{
 			Gboard[1][0] = 'O';
 			
 			
 		}
 		
 		if( board[X] == 5 )
 		{
 			Gboard[1][1] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 5)
 		{
 			Gboard[1][1] = 'O';
 			
 			
 		}
 		
 		 if( board[X] == 6 )
 		{
 			Gboard[1][2] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 6)
 		{
 			Gboard[1][2] = 'O';
 			
 			
 		}
 		
 		
 		
 		if( board[X] == 7 )
 		{
 			Gboard[2][0] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 7)
 		{
 			Gboard[2][0] = 'O';
 			
 			
 		}
 		
 		if( board[X] == 8 )
 		{
 			Gboard[2][1] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 8)
 		{
 			Gboard[2][1] = 'O';
 			
 		}
 		
 	    if( board[X] == 9 )
 		{
 			Gboard[2][2] = 'X';
 		}
 		
 		else if( board[O] == 9)
 		{
 			Gboard[2][2] = 'O';
 		}
 		
 		X += 2 ;
 		
 		O += 2 ;
 	
 	}
 
 	printf("\033[0;33m"); //Set the text to the color yellow
 	
 	//Display The Board
 	
 	printf("| %c || %c || %c |\n\n",Gboard[0][0],Gboard[0][1],Gboard[0][2]);
 	
 	printf("| %c || %c || %c |\n\n",Gboard[1][0],Gboard[1][1],Gboard[1][2]);
 	
 	printf("| %c || %c || %c |\n\n",Gboard[2][0],Gboard[2][1],Gboard[2][2]);
 	
 	printf("\n\n");
 	
 	//Condition
 	
 	int Row , Colum ;
 	
 	//horizontal line
 	
 	for( Row = 0 ; Row < 3 ; ++Row)
 	{
 	
 		if( Gboard[Row][0] == Gboard[Row][1] && Gboard[Row][0] == Gboard[Row][2] )
 		{
 			if(Gboard[Row][0] == 'X')
 			{
 				printf("The Winner is %s {%c} " ,player01.name , Gboard[Row][0]);
 				break;
 			}
 			
 			else if(Gboard[Row][0] == 'O')
 			{
 				printf("The Winner is %s {%c} " ,player02.name , Gboard[Row][0]);
 				break;
 			}
 		}
 		
 		else
 		{
 			printf("Contunie !\n\n");
 			break;
 		}
 	}
 	
 	//Vertical line 
 	
 	for( Colum = 0 ; Colum < 3 ; ++Colum)
 	{
 	
 		if( Gboard[0][Colum] == Gboard[1][Colum] && Gboard[0][Colum] == Gboard[2][Colum] )
 		{
 			if(Gboard[0][Colum] == 'X')
 			{
 				printf("The Winner is %s {%c} " ,player01.name , Gboard[0][Colum]);
 				break;
 			}
 			
 			else if(Gboard[0][Colum] == 'O')
 			{
 				printf("The Winner is %s {%c} " ,player02.name , Gboard[0][Colum]);
 				break;
 			}
 		}
 		
 	}
 	
 	//Primary and secondary diameter
 	
 	for(Row = 0 ;Row < 3 ;++Row)
 	{
 		for(Colum = 0 ; Colum < 3;++Colum)
 		
 		if( Row == Colum)
 		
 		if(Gboard[Row][Colum] == 'X')
 			{
 				printf("The Winner is %s {%c} " ,player01.name , Gboard[Row][Colum]);
 				break;
 			}
 			
 			else if(Gboard[Row][Colum] == 'O')
 			{
 				printf("The Winner is %s {%c} " ,player02.name , Gboard[Row][Colum]);
 				break;
 			}
 	}
 	
 	for(Row = 0 ;Row < 3 ;++Row)
 	{
 		for(Colum = 0 ; Colum < 3;++Colum)
 		
 		if( Row + Colum == 2 )
 		
 		if(Gboard[Row][Colum] == 'X')
 			{
 				printf("The Winner is %s {%c} " ,player01.name , Gboard[Row][Colum]);
 				break;
 			}
 			
 			else if(Gboard[Row][Colum] == 'O')
 			{
 				printf("The Winner is %s {%c} " ,player02.name , Gboard[Row][Colum]);
 				break;
 			}
 	}
 }
 
 
int main (void)
{
	int board[9] =  { NULL };
	
	
	
	int index = 0 , indice = 1  ;
	
	int turn = 1 ;
	
	PlayersInfos  player01 , player02 ;
	
	int round	;
	
	printf("\033[0;37m"); //Set the text to the color white
	
	for(int o = 0 ; o < 101;++o)
	{
		printf("*");
	}
	
	printf("\n\n");
	
	for(int i = 0 ; i < 21;++i)
	{
		printf(" ");
	}
	
	printf("\033[0;31m"); //Set the text to the color red
	
	printf("TIC_TAC_TOE");
	
	printf("\033[0;37m"); //Set the text to the color white
	
	printf("\n\n");
	
	for(int o = 0 ; o < 51;++o)
	{
		printf("*");
	}
	
	printf("\n\n");
	
	for(int o = 0 ; o < 51;++o)
	{
		printf("*");
	}
	
	printf("\n\n");
	
	printf("\033[0;36m"); //Set the text to the color cyan
	
	printf("                  | 1 || 2 || 3 |\n\n");
	printf("                  | 4 || 5 || 6 |\n\n");
	printf("                  | 7 || 8 || 9 |\n\n");


	printf("\n\n");
	
	printf("\033[0;37m"); //Set the text to the color white
	
	for(int o = 0 ; o < 51;++o)
	{
		printf("*");
	}
	
	printf("\n\n");
	
	for(int o = 0 ; o < 51;++o)
	{
		printf("*");
	}
	
	printf("\n\n");
	
	//Players names
	
	printf("\033[0;36m"); //Set the text to the color cyan
	
	printf("Player one {1} your name :\t");
	
	printf("\033[0;32m"); //Set the text to the color green
	
	scanf("%s",&player01.name);
	
	printf("\n\n");
	
	printf("\033[0;36m"); //Set the text to the color cyan
	
	printf("Player one {2} your name :\t");
	
	printf("\033[0;31m"); //Set the text to the color red
	
	scanf("%s",&player02.name);
	
	printf("\n\n");
	
	printf("\033[0;37m"); //Set the text to the color white
	
	for(int o = 0 ; o < 51;++o)
	{
		printf("*");
	}
	
	printf("\n\n");
	
	
	//INPUT 
	
	

	do
	{
		
		printf("\033[0;36m"); //Set the text to the color cyan
		
		printf("Player One {1} %s Your Turn IDX=%i ( Choice %i) : ",player01.name,index , turn);
			
		scanf("%i",&board[index]);
			
		while( board[index] == board[indice])
		{
			printf("\n\n");
			
			printf("The Previous Player Already Choosed This number \n\n");
			
			printf("Player One {1} %s Your Turn IDX=%i ( Choice %i) : ",player01.name,index , turn);
			
			scanf("%i",&board[index]);
	
		}
		
		printf("\n\n");
	
		printf("\n%d ", board[index]);
		
		printf("\n\n");
		
		ShowMeTheBoard(board , player01 , player02);
		
		printf("\n\n");
		
		if( turn == 5 )
		{
			printf("\033[0;31m"); //Set the text to the color red
			printf("Turn's up !\n\n");
			break;
		}
		
		else
		{
			printf("\033[0;36m"); //Set the text to the color cyan
			
			printf("Player Two {2} %s Your Turn IDX=%i ( Choice %i) : ",player02.name,indice , turn);
			
			    scanf("%i",&board[indice]);
			
			while( board[index] == board[indice])
			{
				printf("\n\n");
				
				printf("The Previous Player Already Choosed This number \n\n");
			
			printf("Player Two {2} %s Your Turn IDX=%i ( Choice %i) : ",player02.name,indice , turn);
			
			scanf("%i",&board[indice]);
			}
			
		}
		
		printf("\n\n");
		
		printf("\n%d ", board[indice]);
	
		printf("\n\n");
		
	    
		ShowMeTheBoard(board , player01 , player02);
		
		printf("\n\n");
		
		index += 2 ;
		
		indice += 2 ;
		
		turn += 1 ;
	
	}while( turn <= 5 );
	
	printf("\n\n");

		printf("\33[0;37m"); //Set the text to the color white
		printf(" Credits :  Walid Araar");
}
