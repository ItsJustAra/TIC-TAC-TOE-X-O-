#include <stdio.h>
#include <string.h>

//Name's data type

typedef struct 
 {
 	char name[30] ;
 	
 	
 }PlayersInfos;
 
 
 
 void  ShowMeTheBoard(int *board )
 {
 	char Gboard[3][3];
 	
 	//Reset the board to an empety space
 	
 	for(int i = 0 ; i < 3 ;++i)
 	{
 		for(int j = 0 ; j < 3;++j)
 		
 		Gboard[i][j] =	' ' ;
 	}
 	
 	int X = 0 , O = 1;
 	
 	
 	//Printing all
 	
 	while( X < 9)
 	{
 		if( board[X] == 1 )
 		{
 			
 			
 			Gboard[0][0] = 'X';
 			
 			
 			
 			
 			
 			printf("\n");
 		}
 		
 		else if( board[O] == 1)
 		{
 			Gboard[0][0] = 'O';
 			
 			
 		}
 		
 		 if( board[X] == 2 )
 		{
 			Gboard[0][1] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 2)
 		{
 			Gboard[0][1] = 'O';
 			
 			
 		}
 		
 		if( board[X] == 3 )
 		{
 			Gboard[0][2] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 3)
 		{
 			Gboard[0][2] = 'O';
 			
 			
 		}
 		
 		
 		if( board[X] == 4 )
 		{
 			Gboard[1][0] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 4)
 		{
 			Gboard[1][0] = 'O';
 			
 			
 		}
 		
 		if( board[X] == 5 )
 		{
 			Gboard[1][1] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 5)
 		{
 			Gboard[1][1] = 'O';
 			
 			
 		}
 		
 		 if( board[X] == 6 )
 		{
 			Gboard[1][2] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 6)
 		{
 			Gboard[1][2] = 'O';
 			
 			
 		}
 		
 		
 		
 		if( board[X] == 7 )
 		{
 			Gboard[2][0] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 7)
 		{
 			Gboard[2][0] = 'O';
 			
 			
 		}
 		
 		if( board[X] == 8 )
 		{
 			Gboard[2][1] = 'X';
 			
 			
 		}
 		
 		else if( board[O] == 8)
 		{
 			Gboard[2][1] = 'O';
 			
 		}
 		
 	    if( board[X] == 9 )
 		{
 			Gboard[2][2] = 'X';
 		}
 		
 		else if( board[O] == 9)
 		{
 			Gboard[2][2] = 'O';
 		}
 		
 		X += 2 ;
 		
 		O += 2 ;
 	
 	}
 
 	printf("\033[0;33m"); //Set the text to the color yellow
 	
 	printf("| %c || %c || %c |\n\n",Gboard[0][0],Gboard[0][1],Gboard[0][2]);
 	
 	printf("| %c || %c || %c |\n\n",Gboard[1][0],Gboard[1][1],Gboard[1][2]);
 	
 	printf("| %c || %c || %c |\n\n",Gboard[2][0],Gboard[2][1],Gboard[2][2]);
 	
 	printf("\n\n");
 	
 	int game = 1 ;
 	
 	while( game < 6 )
 	{
 		if( Gboard[0][0] == Gboard[0][1] && Gboard[0][0] == Gboard[0][2])
 		{
 			printf("The winner is : %c",Gboard[0][0]);
 			
 			break;
 		}
 		
 		else if( Gboard[1][0] == Gboard[1][1] && Gboard[1][0] == Gboard[1][2])
 		{
 			printf("The winner is : %c",Gboard[1][0]);
 			
 			break;
 		}
 		
 		else if( Gboard[2][0] == Gboard[2][1] && Gboard[2][0] == Gboard[2][2])
 		{
 			printf("The winner is : %c",Gboard[2][0]);
 			
 			break;
 		}
 		
 		
 		
 		
 		else if( Gboard[0][0] == Gboard[1][0] && Gboard[0][0] == Gboard[2][0])
 		{
 			printf("The winner is : %c",Gboard[0][0]);
 			
 			break;
 		}
 		
 		else if( Gboard[0][1] == Gboard[1][1] && Gboard[0][1] == Gboard[2][1])
 		{
 			printf("The winner is : %c",Gboard[0][1]);
 			
 			break;
 		}
 		
 		else if( Gboard[0][2] == Gboard[1][2] && Gboard[0][2] == Gboard[2][2])
 		{
 			printf("The winner is : %c",Gboard[0][2]);
 			
 			break;
 		}
 		
 		
 		else if( Gboard[0][0] == Gboard[1][1] && Gboard[0][0] == Gboard[2][2])
 		{
 			printf("The winner is : %c",Gboard[0][0]);
 			
 			break;
 		}
 		
 		else if( Gboard[0][2] == Gboard[1][1] && Gboard[0][2] == Gboard[2][0])
 		{
 			printf("The winner is : %c",Gboard[0][2]);
 			
 			break;
 		}
 		
 		else
 		{
 			printf("Contunie !");
 			break;
 		}
 		
 		break;
 		
 		++game ;
 	}
 			
 }
 
 
int main ( int game )
{
	int board[9] =  { NULL };
	
	
	
	int index = 0 , indice = 1  ;
	
	int turn = 1 ;
	
	PlayersInfos  player01 , player02 ;
	
	int round	;
	
	printf("\033[0;37m"); //Set the text to the color white
	
	for(int o = 0 ; o < 101;++o)
	{
		printf("*");
	}
	
	printf("\n\n");
	
